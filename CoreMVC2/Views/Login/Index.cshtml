@using CoreMVC2.Admin.Models.Entities
@model Logon

@{
    ViewBag.Title = "Giriş";
    //Layout = "~/Areas/Admin/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-box">
    <div class="login-logo">
        <a href="#"><b><i class="fa fa-terminal" aria-hidden="true"></i> APK</b>Panel</a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">Web sayfanızı yönetmek için giriş yapın</p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <form name="form" novalidate="">
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(model => model.UserCode, new { title = "Kullanıcı Adı", placeholder = "Kullanıcı Adı", @class = "form-control" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(model => model.Password, new { title = "Parola", placeholder = "Parola", @class = "form-control" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                @if (TempData["Alert"] == "true")
                {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        @Html.ValidationSummary(false, "")
                    </div>
                }
                <div class="row">
                    <div class="col-xs-8">
                        @*<div class="checkbox icheck">
                                <label>
                                    <input type="checkbox"> Remember Me
                                </label>
                            </div>*@
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Giriş</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        }
        @*<div class="social-auth-links text-center">
                <p>- OR -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                    <i class="fa fa-facebook"></i> Sign in using
                    Facebook
                </a>
                <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                    <i class="fa fa-google-plus"></i> Sign in using
                    Google+
                </a>
            </div>*@
        <!-- /.social-auth-links -->
        <a href="#">Şifremi unuttum</a><br>
        @*<a href="register.html" class="text-center">Register a new membership</a>*@
    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->